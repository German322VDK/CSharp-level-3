<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Project_send_Email">
    <Style x:Key="BlackButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Black"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>
    <Style  x:Key="HypeBack" TargetType="Grid">
        <Setter Property="Background" Value="#FF505050"/>
    </Style>
    <Style x:Key="Hypetb" TargetType="TabControl">
        <Setter Property="Background" Value="#FFAFAFAF"/>
        <Setter Property ="FontSize" Value="18"/>
        <Setter Property="FontFamily" Value="Times New Roman"/>
    </Style>
</ResourceDictionary>